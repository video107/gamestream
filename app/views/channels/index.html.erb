<%= render "shared/navbar" %>
<div class="row">
  <div id="wrapper">
    <div id="myCarousel" data-carousel-3d>
        <% if @channels_top5[0].present? %>
          <%= link_to image_tag(@channels_top5[0].url,size: "685x455"), @channels_top5[0], target: "_blank"  %>
        <% end %>
        <% if @channels_top5[1].present? %>
            <%= link_to image_tag(@channels_top5[1].url,size: "685x455"), @channels_top5[1], target: "_blank"  %>
        <% end %>
        <% if @channels_top5[2].present? %>
            <%= link_to image_tag(@channels_top5[2].url,size: "685x455"), @channels_top5[2], target: "_blank"  %>
        <% end %>
        <% if @channels_top5[3].present? %>
            <%= link_to image_tag(@channels_top5[3].url,size: "685x455"), @channels_top5[3], target: "_blank"  %>
        <% end %>
        <% if @channels_top5[4].present? %>
            <%= link_to image_tag(@channels_top5[4].url,size: "685x455"), @channels_top5[4], target: "_blank"  %>
        <% end %>
    </div>
  </div>
</div>

<div class="clearfix"></div>
<div class="row">
  <div class="decoration_bar">
    <div class="col-xs-2 col-xs-offset-1 col-sm-2 col-sm-pull-1 col-md-2 col-md-offset-2">
      <%= link_to image_tag("broadcast.png", size: "55x56", alt: "live stream", class: "live_image"), all_path %>
    </div>
    <div class=" text-left col-xs-4 col-sm-4 col-sm-pull-1 col-md-4 col-md-pull-2">
      <span class="live_words">Live Streaming</span>
    </div>
    <div class="text-left col-xs-2 col-xs-offset-2 col-md-2 col-md-pull-1">
      <%= link_to  "More", all_path, class: "all_channels" %>
    </div>
  </div>
</div>
<br>


<div class="row row_width">
  <% @channels.each do |c| %>
  <div class="col-xs-8 col-sm-6 col-md-4">
    <div><%= link_to image_tag(c.url,size: "300x180",), c, target: "_blank" %></div>
    <div class="channel_name"><%= c.channel_title %></div>
    <div class="channel_name"><%= c.broadcaster_name %></div>
    <div class="channel_name">
      <div id="circle_live" style="display: inline-block;"></div>
      <div style="display: inline-block;">
        <span class="user_name"><%= c.name %> Live</span> <%= c.viewers %> 觀眾
      </div>
    </div>
    <br>
  </div>
  <% end %>
</div>
