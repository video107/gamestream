<div class="row">
  <div id="wrapper">
    <div id="myCarousel" data-carousel-3d>
      <% if @channels_top5[0].present? %>
        <%= link_to image_tag(@channels_top5[0].url), @channels_top5[0], target: "_blank", class: "slider_pic"  %>
      <% end %>
      <% if @channels_top5[1].present? %>
        <%= link_to image_tag(@channels_top5[1].url), @channels_top5[1], target: "_blank", class: "slider_pic"  %>
      <% end %>
      <% if @channels_top5[2].present? %>
        <%= link_to image_tag(@channels_top5[2].url), @channels_top5[2], target: "_blank", class: "slider_pic"  %>
      <% end %>
      <% if @channels_top5[3].present? %>
        <%= link_to image_tag(@channels_top5[3].url), @channels_top5[3], target: "_blank", class: "slider_pic"  %>
      <% end %>
      <% if @channels_top5[4].present? %>
        <%= link_to image_tag(@channels_top5[4].url), @channels_top5[4], target: "_blank", class: "slider_pic"  %>
      <% end %>
    </div>
  </div>
</div>

<div class="clearfix"></div>
<div class="row">
  <div class="decoration_bar">
    <div class="frame">
      <%= link_to image_tag("broadcast.png", alt: "live stream",size: "55x56", class: "live_image"), all_path, onclick: "ga('send', 'event', 'category', 'Triggered Event', '');" %>
      <span class="live_words">Live Streaming</span>
      <%= link_to  "More", all_path, class: "all_channels" %>
    </div>
  </div>
</div>
<br>


<div class="row row_width">
  <% @channels.each do |c| %>
  <div class="col-xs-12 col-sm-6 col-md-4 channels">
    <div class="wrapper">
      <div><%= link_to image_tag(c.url,size: "300x180",), c, target: "_blank" %></div>
      <div class="channel_name"><%= c.channel_title %></div>
      <div class="channel_name"><%= c.broadcaster_name %></div>
      <div class="channel_name">
        <div id="circle_live" style="display: inline-block;"></div>
        <div style="display: inline-block;">
          <span class="user_name"><%= c.name %> Live</span> <%= c.viewers %> 觀眾
        </div>
      </div>
    </div>
    <br>
  </div>
  <% end %>
</div>


<script>
  $(document).ready(function(){
    setInterval(function() {
      $('#myCarousel').Carousel3d('next');},4000);
  });
</script>
