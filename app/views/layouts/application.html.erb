</head>
<body>
  <%= render "shared/navbar" %>
  <div class="container-fluid">
    <div class="row">
      <% if (flash[:notice] && !flash[:notice].empty?) %>
        <p class="alert alert-info">
          <%= flash[:notice] %>
        </p>
      <% end %>
      <% if (flash[:alert] && !flash[:alert].empty?) %>
        <p class="alert alert-warning">
          <%= flash[:alert] %>
        </p>
      <% end %>
      <% if (flash[:success] && !flash[:success].empty?) %>
        <p class="alert alert-success">
          <%= flash[:success] %>
        </p>
      <% end %>
      <% if (flash[:danger] && !flash[:danger].empty?) %>
        <p class="alert alert-danger">
          <%= flash[:danger] %>
        </p>
      <% end %>
    </div>
      <%= yield %>
  </div>
</body>
<script>
  $(document).ready();
  $(".alert").fadeOut(3000);
</script>
</html>
