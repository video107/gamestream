<!DOCTYPE html>
<html>
<head>
  <title>Gamestream</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

      <div class="container">
        <div class="row">
          <%= yield %>
          <% if flash[:notice] %>
            <p class="alert alert-info"><%= flash[:notice] %></p>
          <% end %>
          <% if flash[:alert] %>
            <p class="alert alert-warning"><%= flash[:alert] %></p>
          <% end %>
          <% if flash[:success] %>
            <p class="alert alert-success"><%= flash[:success] %></p>
          <% end %>
          <% if flash[:danger] %>
            <p class="alert alert-danger"><%= flash[:danger] %></p>
          <% end %>
        </div>
      </div>


</body>
</html>
