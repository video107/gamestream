<div class="container">
  <div class="row">
    <% if current_user.fb_image %>
        <h2>Hi <%=image_tag(current_user.fb_image,:class => "img-circle") %></h2>
      <% else %>
        <h2>Hi <%= current_user.user_name %></h2>
    <% end %>
    <div class="regist_word">遊戲名稱：<%= @menu.name %></div>
    <div class="spacing"></div>
    <div class="regist_word">遊戲簡介：</div>
    <%= @menu.contents %>
    <div class="spacing"></div>
    <div class="regist_word">遊戲連結android：</div>
    <%= @menu.menu_url %>
    <div class="spacing"></div>
    <div class="regist_word">遊戲連結ios：</div>
    <%= @menu.menu_url_ios %>
    <div class="spacing"></div>

    <div class="regist_word">遊戲icon：</div>
    <%= image_tag(@menu.game_icon(:thumb)) %>
    <div class="spacing"></div>
    <%= form_for @case,:url => menu_cases_path(@menu) do |f| %>
     <%= f.hidden_field :case_url%>
     <%= f.submit "建立專屬IOS連結", :class => "btn btn-primary" ,:name => "commit" %>
     <%= f.submit "建立專屬Android連結", :class => "btn btn-primary",:name => "commit" %>
    <% end %>
    <div class="spacing"></div>
    <div class="regist_word">遊戲圖片：</div>
    <%= image_tag(@menu.game_pic(:small)) %>
    <%= image_tag(@menu.game_pic_2(:small)) %>
    <%= image_tag(@menu.game_pic_3(:small)) %>

    <div class="regist_word">遊戲圖片：</div>
    <%= image_tag(@menu.game_pic_4(:small)) %>
    <%= image_tag(@menu.game_pic_5(:small)) %>

         <br>
        <%= link_to "回到遊戲頁面",root_path,:class => "btn btn-default" %>
        </div>
  </div>
</div>
