<div class="container">
  <div class="row">
    <h2>編輯 <%= resource_name.to_s.humanize %></h2>
    <div class="spacing"></div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>

      <!-- <div class="field regist_word form-inline"> -->
        <%#= f.label :email %>
        <%#= f.email_field :email, autofocus: true, :class => "form-control form_word" %>
      <!-- </div> -->

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
      <div class="field regist_word">
        <%= f.label :current_password, "舊密碼" %><i>(必填)</i><br />
         <!-- <i>(we need your current password to confirm your changes)</i> -->
        <%= f.password_field :current_password, autocomplete: "off", :class => "form-control form_word"  %>
      </div>

      <div class="field regist_word">
        <%= f.label :password, "新密碼" %> <i>(如果不想更改密碼,請保持空白)</i><br />
        <%= f.password_field :password, autocomplete: "off", :class => "form-control form_word"  %>
      </div>

      <div class="field regist_word">
        <%= f.label :password_confirmation, "新密碼確認" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control form_word"  %>
      </div>


      <div class="spacing"></div>
      <div class="actions">
        <%= f.submit "更新", :class => "btn btn-primary" %>
      </div>

    <% end %>

    <!-- <h3>Cancel my account</h3> -->

    <!-- <p>Unhappy? <%#= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p> -->
    <div class="spacing"></div>
    <%= link_to "回到上一頁", user_cases_path(current_user), :class => "btn btn-default" %>
  </div>
</div>