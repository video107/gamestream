<div class="container">
  <div class="row">
  <h2>註冊</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <span style="font-size:18px"><%= f.label :email %></span><br />
        <%= f.email_field :email, autofocus: true,:class => "form-control form_word" %>
      </div>

      <div class="field">
        <span style="font-size:18px"><%= f.label :nickname %></span><br />
        <%= f.text_field :nickname,:class => "form-control form_word" %>
      </div>

      <div class="field">
        <span style="font-size:18px"><%= f.label :password,"密碼" %></span>
        <% if @minimum_password_length %>
        <em>(至少 <%= @minimum_password_length %> 位數字)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off",:class => "form-control form_word" %>
      </div>

      <div class="field">
        <span style="font-size:18px"><%= f.label :password_confirmation,"確認密碼" %></span><br />
        <%= f.password_field :password_confirmation, autocomplete: "off",:class => "form-control form_word" %>
      </div>
      <div class="spacing"></div>
      <div class="actions">
        <%= f.submit "確認註冊",:class => "btn btn-success" %>
        <%= render "devise/shared/links" %>
      </div>
    <% end %>


  </div>
</div>