<div class="row">
  <%= render "shared/navbar" %>
</div>
<br>
<div class="row">
  <% if @feedback.errors.any? %>
    <% @feedback.errors.full_messages.each do |m| %>
      <% flash[:danger] = m %>
    <% end %>
  <% end %>
</div>
<div class="row col-xs-5 col-xs-offset-1 row_contact">
  <div><%= image_tag("contact.png", height: "55%", width: "55%", alt: "聯絡我們", class: "square2circle")%></div>
</div>
<div class="row col-xs-5">
  <%= form_for @feedback, :url => feedbacks_path do |f| %>

  <div class="field">
    <%= f.label :如何稱呼您 %><br>
    <%= f.text_field :name, :class =>"form-control form_word" %>
  </div>

  <div class="field">
    <%= f.label :您的電子郵件信箱 %><br>
    <%= f.text_field :email, :class =>"form-control form_word" %>
  </div>

  <div class="field">
    <%= f.label :您的意見 %><br>
    <%= f.text_area :content, :class => "form-control", :rows => "6"%>
  </div>

  <div class="spacing"></div>
  <div class="action">
    <%= f.submit "送出問題", :class => "btn btn-success"%>
  </div>

  <% end %>
</div>
