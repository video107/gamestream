<div class="container">
  <div class="row">
    <p id="notice">
      <% if flash[:notice] %>
        <%= flash[:notice] %>
      <% end %>
    </p>

    <h1>使用者管理後台</h1>
      <span><%#= link_to '新使用者', new_admin_user_path, :class => "btn btn-success" %></span>
      <div class="spacing"></div>

    <table class ="table table-bordered">
      <thead>
        <tr>
          <th>ID</th>
          <th>Email</th>
          <th>Name</th>
          <th>Nickname</th>
          <th>Phone</th>
          <th>Address</th>
          <th>Bank name</th>
          <th>Bank name code</th>
          <th>Bank account</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @admin_users.each do |admin_user| %>
          <tr class= "<%= admin_user.role %>">
            <td><%= admin_user.id %></td>
            <td><%= admin_user.email %></td>
            <td><%= admin_user.name %></td>
            <td><%= admin_user.nickname %></td>
            <td><%= admin_user.phone %></td>
            <td><%= admin_user.address %></td>
            <td><%= admin_user.bank_name %></td>
            <td><%= admin_user.bank_name_code %></td>
            <td><%= admin_user.bank_account %></td>
            <td>
              <%= link_to '使用者詳細', admin_user,:class => "btn btn-warning" %>
              <%= link_to '編輯', edit_admin_user_path(admin_user), :class => "btn btn-info" %>
              <%= link_to '刪除使用者', admin_user, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %>
              <% if admin_user.role == nil || admin_user.role == "active" %>
                <%= link_to "停權", suspend_user_path(admin_user),:method => :post,  :class => "btn btn-suspend" %>
              <% elsif admin_user.role == "suspend" %>
                <%= link_to "復權", restore_user_path(admin_user),:method => :post, :class => "btn btn-restore" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>
    <%= link_to "遊戲上架後台", admin_menus_path, :class => "btn btn-success" %>
    <%= link_to "遊戲前台", root_path, :class => "btn btn-warning" %>

  </div>
</div>