<div class="container">
  <div class="row">
    <p id="notice">
      <% if flash[:notice] %>
        <%= flash[:notice] %>
      <% end %>
    </p>

    <h1>遊戲上架後台</h1> <br>
    <span><%= link_to '新遊戲', new_admin_menu_path, :class => "btn btn-warning" %></span>
    <div class="spacing"></div>

    <table class="table table-bordered">
      <thead>
        <tr class="table_header">
          <th>遊戲大頭照</th>
          <th>遊戲名</th>
          <th>遊戲簡介</th>
          <th>遊戲原始連結android</th>
          <th>遊戲原始連結ios</th>
          <th>遊戲圖片1</th>
          <th>遊戲icon</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <%# @admin_menus.each do |admin_menu| %>
        <% @menus.each do |menu| %>
          <tr>
            <td>
              <%#= admin_menu.image %>
              <%= image_tag(menu.image,:width => 100) %>
            </td>
            <td><%= menu.name %></td>
            <td><%= menu.contents %></td>
            <td><%= menu.menu_url %></td>
            <td><%= menu.menu_url_ios %></td>
            <td><%= image_tag(menu.game_pic(:thumb),:class => "img_circle") %></td>
            <td><%= menu.game_icon %></td>
            <td>
              <%= link_to '詳細', admin_menu_path(menu), :class => "btn btn-warning" %>
              <%= link_to '編輯', edit_admin_menu_path(menu), :class => "btn btn-info" %>
              <%= link_to '刪除', admin_menu_path(menu), method: :delete, data: { confirm: 'Are you sure?' },:class => "btn btn-danger" %>
            </td>
          </tr>
          <% end %>
        <%# end %>
      </tbody>
    </table>
    <%= paginate @menus  %>


  </div>
</div>