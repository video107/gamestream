<div class="container">
  <div class="row">
    <h1>遊戲垃圾桶</h1>
    <table class ="table table-bordered">
      <thead>
        <tr>
          <th>遊戲名</th>
          <th>遊戲上架時間</th>
          <th>遊戲分類</th>
          <th>Last Delete</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @menus.each do |menu| %>
          <tr>
            <td><%= menu.reify.name %></td>
            <td><%= menu.reify.created_at.localtime.strftime("%Y/%m/%d")  %></td>
            <td><%= menu.reify.category.name %></td>
            <td><%= menu.reify.updated_at.localtime.to_s(:short) %></td>
            <td>
              <%= link_to "回復刪除遊戲", recover_delete_admin_menu_path(menu.reify.id),:method => :post, :class => "btn btn-success" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @menus %> <br>
    <%= link_to "回遊戲管理", admin_menus_path, :class => "btn btn-primary"%>
  </div>
</div>
