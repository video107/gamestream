    <%= f.text_field :menu_url, :class => "form-control form_word"  %>
  </div>
  <div class="field" id="menu_menu_url">
    <%= f.label :menu_url_ios %><br>
    <%= f.text_field :menu_url_ios, :class => "form-control form_word"  %>
  </div>
  <div class="field form_inline">
    <%= f.label :cpc_android, "CPC_Android" %><br>
    <%= f.text_field :cpc_android, :class =>"form-control form_word_small"  %>
    <%= f.label :cpc_android_user, "CPC_Android_for_user" %>
