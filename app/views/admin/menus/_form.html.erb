<%= form_for(@admin_menu) do |f| %>
  <% if @admin_menu.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@admin_menu.errors.count, "error") %> prohibited this admin_menu from being saved:</h2>

      <ul>
      <% @admin_menu.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :game_upload_time %><br>
    <%= Time.now.strftime("%Y-%m-%d %I:%M %p") %>
  </div>
  <div class="field">
    <%= f.label :game_category %><br>
    <%= f.collection_select(:category_id, Category.all, :id, :name, {} , :class => "form-control form_word")%>
  </div>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, :class =>"form-control form_word" %>
  </div>
